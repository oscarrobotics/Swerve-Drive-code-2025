package frc.robot;

import com.ctre.phoenix.motorcontrol.ControlMode;
import com.ctre.phoenix.motorcontrol.can.TalonFX;
import edu.wpi.first.wpilibj.TimedRobot;
import edu.wpi.first.wpilibj.XboxController;

public class Robot extends TimedRobot {
    private final TalonFX motor = new TalonFX(0); // Our Falcon 500 motor controller on CAN ID 0
    private final XboxController controller = new XboxController(0); // Our Xbox controller on USB port 0

    @Override
    public void teleopPeriodic() {
        if (controller.getYButton()) {
            motor.set(ControlMode.PercentOutput, 1.0); // When Y button is pressed, run motor clockwise
        } else if (controller.getXButton()) {
            motor.set(ControlMode.PercentOutput, -1.0); // When X button is pressed, run motor counterclockwise
        }
        
        /*
        Proven unnecessary

        else {
            motor.set(ControlMode.PercentOutput, 0); // Otherwise, stop the motor
        }
        */
    }
}
